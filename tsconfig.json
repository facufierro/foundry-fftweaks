{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "@league-of-foundry-developers/foundry-vtt-types"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
