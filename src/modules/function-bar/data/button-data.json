{
    "heal": {
        "name": "Heal\nClick: Full Heal\nAlt+Click: Heal 1\nCtrl+Click: Heal 5\nShift+Click: Heal 10",
        "icon": "fas fa-heart",
        "row": 1,
        "keyBindings": {
            "default": "FFT.Functions.healTokens()",
            "alt": "FFT.Functions.healTokens(1)",
            "ctrl": "FFT.Functions.healTokens(5)",
            "shift": "FFT.Functions.healTokens(10)"
        }
    },
    "hurt": {
        "name": "Hurt\nClick: Kill\nAlt+Click: Hurt 1\nCtrl+Click: Hurt 5\nShift+Click: Hurt 10",
        "icon": "fas fa-heart-crack",
        "row": 1,
        "keyBindings": {
            "default": "FFT.Functions.hurtTokens()",
            "alt": "FFT.Functions.hurtTokens(1)",
            "ctrl": "FFT.Functions.hurtTokens(5)",
            "shift": "FFT.Functions.hurtTokens(10)"
        }
    },
    "rest": {
        "name": "Rest\nClick: Long Rest\nShift+Click: Short Rest",
        "icon": "fas fa-bed",
        "row": 1,
        "keyBindings": {
            "default": "FFT.Functions.restTokens(true)",
            "shift": "FFT.Functions.restTokens(false)"
        }
    },
    "combat": {
        "name": "Toggle Combat\nClick: Add & Roll Initiative\nShift+Click: Delete Encounter\nAlt+Click: Reset Combat\nRight-Click: Remove from Combat",
        "icon": "fas fa-swords",
        "row": 2,
        "keyBindings": {
            "default": "FFT.Functions.addTokensToCombat",
            "shift": "FFT.Functions.deleteCombatEncounter",
            "alt": "FFT.Functions.resetCombatEncounter",
            "rightClick": "FFT.Functions.removeTokensFromCombat"
        }
    },
    "money": {
        "name": "Add gold",
        "icon": "fas fa-regular fa-coins",
        "row": 2,
        "script": "FFT.Functions.distributeGold"
    },
    "experience": {
        "name": "Add XP",
        "icon": "fas fa-book",
        "row": 2,
        "script": "FFT.Functions.distributeExperience"
    },
    "selectAllPlayers": {
        "name": "Select All Players\nClick: Select all player tokens on scene\nShift+Click: Spawn all players at clicked location",
        "icon": "fas fa-users",
        "row": 3,
        "keyBindings": {
            "default": "FFT.Functions.selectAllPlayers",
            "shift": "FFT.Functions.waitForCanvasClickToSpawnPlayers"
        }
    },
    "lootCorpses": {
        "name": "Loot Corpses\nClick: Open loot dialog for dead enemies",
        "icon": "fas fa-treasure-chest",
        "row": 3,
        "script": "FFT.Functions.lootCorpses"
    },
    "itemReplacer": {
        "name": "Item Replacer\nClick: Replace items (selected tokens or dialog)\nCtrl+Click: Replace for all players",
        "icon": "fas fa-exchange-alt",
        "row": 3,
        "keyBindings": {
            "default": "FFT.Functions.replaceItemsFromCompendiums",
            "ctrl": "FFT.Functions.replaceItemsForAllPlayers"
        }
    }
}