{
    "actionButtons": {
        "commands": [
            {
                "name": "│​",
                "color": "#666666",
                "tooltip": "Separator",
                "command": ""
            },
            {
                "name": "$(info) Status",
                "color": "#00BCD4",
                "singleInstance": true,
                "command": "Get-Service FoundryVTT | Select-Object Status, StartType, DisplayName | Format-Table -AutoSize",
                "terminalName": "powershell",
                "tooltip": "Check Foundry VTT Service Status"
            },
            {
                "name": "$(debug-stop) Stop",
                "color": "#F44336",
                "singleInstance": true,
                "command": "Stop-Service FoundryVTT -Force; Write-Host 'Foundry Service Stopped' -ForegroundColor Red",
                "terminalName": "powershell",
                "tooltip": "Stop Foundry VTT Service"
            },
            {
                "name": "$(play) Start",
                "color": "#4CAF50",
                "singleInstance": true,
                "command": "Start-Service FoundryVTT; Write-Host 'Foundry Service Started' -ForegroundColor Green",
                "terminalName": "powershell",
                "tooltip": "Start Foundry VTT Service"
            },
            {
                "name": "$(sync) Restart",
                "color": "#FFC107",
                "singleInstance": true,
                "command": "Restart-Service FoundryVTT -Force; Write-Host 'Foundry Service Restarted' -ForegroundColor Yellow",
                "terminalName": "powershell",
                "tooltip": "Restart Foundry VTT Service"
            },
            {
                "name": "│​​​​",
                "color": "#666666",
                "tooltip": "Separator",
                "command": ""
            },
            {
                "name": "$(tools) Dev Watch",
                "color": "#673AB7",
                "singleInstance": true,
                "command": "Write-Host 'Starting Vite Dev Server...' -ForegroundColor Cyan; Set-Location 'C:\\Main\\Games\\FoundryVTT\\Data\\modules\\fftweaks'; npm run dev",
                "terminalName": "powershell",
                "tooltip": "Start Vite Watcher (Hot Reload)"
            },
            {
                "name": "│​​​​​",
                "color": "#666666",
                "tooltip": "Separator",
                "command": ""
            },
            {
                "name": "$(desktop-download) Reboot",
                "color": "#FF5722",
                "singleInstance": true,
                "command": "shutdown /r /t 5",
                "terminalName": "powershell",
                "tooltip": "Reboot the PC (5 second delay)"
            }
        ],
        "defaultColor": "#00BCD4",
        "reloadButton": "$(sync)",
        "loadNpmCommands": false
    },
    "python-envs.defaultEnvManager": "ms-python.python:venv",
    "python-envs.pythonProjects": []
}
