<form>
    <div class="form-group">
        <label>Battlemap Settings</label>
        <div class="form-fields">
            <select name="map-type">
                <option value="dungeon">Dungeon</option>
                <option value="forest">Forest</option>
                <option value="cave">Cave</option>
                <option value="city">City</option>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <label>Map Size</label>
        <div class="form-fields">
            <div class="dimensions">
                <input type="number" name="width" value="20" min="5" max="100">
                <span>Ã—</span>
                <input type="number" name="height" value="20" min="5" max="100">
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label>Complexity</label>
        <div class="form-fields">
            <input type="range" name="complexity" min="0" max="100" value="50">
            <span class="range-value">50</span>
        </div>
    </div>
    
    <div class="form-group">
        <label>Features</label>
        <div class="form-fields feature-toggles">
            <label class="checkbox">
                <input type="checkbox" name="feature-doors" checked>
                Doors
            </label>
            <label class="checkbox">
                <input type="checkbox" name="feature-furniture">
                Furniture
            </label>
            <label class="checkbox">
                <input type="checkbox" name="feature-traps">
                Traps
            </label>
        </div>
    </div>
    
    <div class="form-group button-group">
        <button type="button" class="generate-button">
            <i class="fas fa-magic"></i> Generate Battlemap
        </button>
    </div>
</form>

<style>
    .feature-toggles {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }
    
    .button-group {
        display: flex;
        justify-content: center;
        margin-top: 15px;
    }
    
    .generate-button {
        background: #4b6584;
        color: white;
        border: none;
        border-radius: 3px;
        padding: 8px 16px;
        cursor: pointer;
        transition: background-color 0.2s;
    }
    
    .generate-button:hover {
        background: #3c526d;
    }
    
    .dimensions {
        display: flex;
        align-items: center;
    }
    
    .dimensions input {
        width: 60px;
    }
    
    .dimensions span {
        margin: 0 5px;
    }
</style>
